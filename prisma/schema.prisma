// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  role      String   @default("user")
  createdAt DateTime @default(now())

  accurateCredentials AccurateCredentials[]
  exportJobs          ExportJob[]
  importJobs          ImportJob[]
}

model AccurateCredentials {
  id              String   @id @default(uuid())
  userId          String
  appKey          String
  signatureSecret String
  apiToken        String
  refreshToken    String?  // OAuth refresh token for token refresh
  host            String?
  session         String?  // Session token from open-db.do
  dbId            Int?     // Database ID from Accurate
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  checkoutSessions CheckoutSession[]
  exportJobs       ExportJob[]
  importJobs       ImportJob[]
}

// Self Checkout feature - tracks staff checkout sessions
model CheckoutSession {
  id            String    @id @default(uuid())
  staffEmail    String    // Email from QR badge scan
  staffName     String?   // Parsed from email or badge
  staffDept     String?   // Department parsed from email
  createdAt     DateTime  @default(now())
  completedAt   DateTime?
  status        String    @default("pending") // pending, completed, failed
  errorMessage  String?
  
  items         CheckoutItem[]
  credentialId  String
  credential    AccurateCredentials @relation(fields: [credentialId], references: [id])
  
  adjustmentId  Int?      // ID of created inventory adjustment in Accurate
}

model CheckoutItem {
  id              String   @id @default(uuid())
  sessionId       String
  session         CheckoutSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  itemCode        String   // Scanned barcode/item code
  itemName        String?  // Fetched from Accurate
  quantity        Int      @default(1)
  scannedAt       DateTime @default(now())
}

model ExportJob {
  id          String    @id @default(uuid())
  userId      String
  credentialId String?
  type        String // "inventory_adjustment"
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  status      String // pending, running, done, error
  resultUrl   String?
  errorMessage String?
  format      String?
  recordCount Int?

  user        User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  credential  AccurateCredentials?  @relation(fields: [credentialId], references: [id], onDelete: SetNull)
}

model ImportJob {
  id          String    @id @default(uuid())
  userId      String
  credentialId String?
  type        String
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  status      String
  resultUrl   String?
  errorMessage String?
  format      String?
  fileName    String?
  recordCount Int?
  successCount Int?
  failedCount Int?

  user        User                  @relation(fields: [userId], references: [id], onDelete: Cascade)
  credential  AccurateCredentials?  @relation(fields: [credentialId], references: [id], onDelete: SetNull)
}
